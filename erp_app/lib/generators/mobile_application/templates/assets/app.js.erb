Ext.define('Compass.ErpApp.Mobile.<%= class_name %>.Application', {
    extend: 'Ext.Panel',
    xtype: 'compass-erpapp-mobile-<%= file_name %>-application',
    config:{
        tabBarPosition: 'bottom',
        items:[
            {
                xtype: 'toolbar',
                ui: 'light',
                docked: 'top',
                items: [
                    {
                        text: 'Home',
                        ui: 'back',
                        handler: function (btn) {
                            btn.up('#mainContainer').setActiveItem('#home');
                        }
                    }
                ]
            }
        ],
        html:'Hello World'
    }
});