<%= form_tag build_widget_url(:update_user_information), :remote => true, :id => 'user_information_form', :role => 'form' do %>
    <div class="form-group">
      <label for="email">Email Address</label>
      <%= text_field_tag :email, @user.email, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group">
      <label for="first_name">First Name</label>
      <%= text_field_tag :first_name, @individual.current_first_name, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group">
      <label for="last_name">Last Name</label>
      <%= text_field_tag :last_name, @individual.current_last_name, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group">
      <label for="middle_name">Middle Name</label>
      <%= text_field_tag :middle_name, @individual.current_middle_name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag "Submit", :disable_with => "Please wait...", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
<% end %>

<script type="text/javascript">
    jQuery('#birth_date').datepicker({
        format: 'mm/dd/yyyy'
    });
</script>